{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowJs": true,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "include": ["src", "types/jsx.d.ts"],
  "exclude": ["node_modules"]
}
